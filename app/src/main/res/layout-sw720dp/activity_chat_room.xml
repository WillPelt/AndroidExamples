<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoomActivity"
    android:id="@id/fl">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-37dp">

        <ListView
            android:id="@id/lv"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"></ListView>

        <FrameLayout
            android:id="@id/fltablet"
            android:layout_width="700dp"
            android:layout_height="1700dp"
            android:layout_marginLeft="400dp" />
        <Button
            android:id="@id/recieve"
            android:text="@string/recieve"
            android:layout_height="50dp"
            android:layout_width="100dp"
            android:layout_alignStart="@id/lv"
            android:layout_alignBottom="@id/lv"/>


        <EditText

            android:id="@id/textGoesHere"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/type"
            android:text="@string/textGoesHere"
            android:layout_marginLeft="100dp"
            android:layout_alignBottom="@id/lv"
            />
        <Button
            android:id="@id/send"
            android:text="@string/send"
            android:layout_height="50dp"
            android:layout_width="100dp"
            android:layout_alignEnd="@+id/lv"
            android:layout_alignBottom="@id/lv"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>